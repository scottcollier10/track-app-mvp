'use client';

import Link from 'next/link';
import { formatLapMs, formatDurationMs } from '@/lib/time';

interface Session {
  id: string;
  driver_name: string;
  track_name: string;
  date: string;
  best_lap_ms: number;
  total_time_ms: number;
  lap_count: number;
  source?: string;
}

interface SessionsListProps {
  sessions: Session[];
}

// Helper function: Format driver names (alex.rodriguez -> Alex Rodriguez)
function formatDriverName(name: string): string {
  if (!name) return 'Unknown Driver';
  return name
    .split(/[._-]/)
    .map(part => part.charAt(0).toUpperCase() + part.slice(1).toLowerCase())
    .join(' ');
}

// Helper function: Get color classes for source badges
function getSourceBadgeColor(source: string): string {
  switch (source?.toLowerCase()) {
    case 'ios_app':
      return 'bg-green-500/10 text-green-400 border border-green-500/20';
    case 'racechrono':
      return 'bg-blue-500/10 text-blue-400 border border-blue-500/20';
    case 'aim':
      return 'bg-purple-500/10 text-purple-400 border border-purple-500/20';
    case 'trackaddict':
      return 'bg-orange-500/10 text-orange-400 border border-orange-500/20';
    default:
      return 'bg-gray-500/10 text-gray-400 border border-gray-500/20';
  }
}

// Helper function: Format source name for display
function formatSourceName(source: string): string {
  switch (source?.toLowerCase()) {
    case 'ios_app': return 'iOS App';
    case 'racechrono': return 'RaceChrono';
    case 'aim': return 'AiM';
    case 'trackaddict': return 'TrackAddict';
    default: return source || 'Generic';
  }
}

export default function SessionsList({ sessions }: SessionsListProps) {
  if (sessions.length === 0) {
    return (
      <div className="text-center py-12">
        <p className="text-gray-500">No sessions found</p>
        <p className="text-sm text-gray-600 mt-2">
          Import a session or start recording on the iOS app
        </p>
      </div>
    );
  }

  return (
    <div className="space-y-4">
      {/* Desktop Table - Hidden on mobile, shown on tablets/desktop */}
      <div className="hidden md:block overflow-x-auto">
        <table className="min-w-full divide-y divide-gray-700">
          <thead>
            <tr className="text-left text-sm text-gray-400">
              <th className="px-4 py-3 font-medium">Driver</th>
              <th className="px-4 py-3 font-medium">Track</th>
              <th className="px-4 py-3 font-medium">Date</th>
              <th className="px-4 py-3 font-medium">Best Lap</th>
              <th className="px-4 py-3 font-medium text-center">Laps</th>
              <th className="px-4 py-3 font-medium">Total Time</th>
              <th className="px-4 py-3 font-medium">Source</th>
            </tr>
          </thead>
          <tbody className="divide-y divide-gray-800">
            {sessions.map((session) => (
              <tr
                key={session.id}
                className="hover:bg-gray-800/50 transition-colors"
              >
                <td className="px-4 py-4">
                  <Link
                    href={`/sessions/${session.id}`}
                    className="text-white hover:text-blue-400 font-medium"
                  >
                    {formatDriverName(session.driver_name)}
                  </Link>
                </td>
                <td className="px-4 py-4 text-gray-300">
                  {session.track_name}
                </td>
                <td className="px-4 py-4 text-gray-400 text-sm">
                  {new Date(session.date).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </td>
                <td className="px-4 py-4">
                  <span className="text-green-400 font-semibold">
                    {formatLapMs(session.best_lap_ms)}
                  </span>
                </td>
                <td className="px-4 py-4 text-center text-white">
                  {session.lap_count || 0}
                </td>
                <td className="px-4 py-4 text-gray-300">
                  {formatDurationMs(session.total_time_ms)}
                </td>
                <td className="px-4 py-4">
                  {session.source && (
                    <span className={`
                      px-2 py-1 text-xs font-medium rounded
                      ${getSourceBadgeColor(session.source)}
                    `}>
                      {formatSourceName(session.source)}
                    </span>
                  )}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {/* Mobile Cards - Hidden on desktop, shown on mobile */}
      <div className="md:hidden space-y-3">
        {sessions.map((session) => (
          <Link
            key={session.id}
            href={`/sessions/${session.id}`}
            className="block"
          >
            <div className="bg-gray-800 rounded-lg p-4 border border-gray-700 hover:border-gray-600 transition-colors active:scale-[0.98]">
              {/* Header: Driver + Source Badge */}
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-lg font-semibold text-white">
                  {formatDriverName(session.driver_name)}
                </h3>
                {session.source && (
                  <span className={`
                    px-2 py-1 text-xs font-medium rounded shrink-0
                    ${getSourceBadgeColor(session.source)}
                  `}>
                    {formatSourceName(session.source)}
                  </span>
                )}
              </div>

              {/* Track + Date */}
              <div className="flex items-center gap-2 text-sm text-gray-400 mb-3">
                <span className="font-medium text-gray-300">
                  {session.track_name}
                </span>
                <span>â€¢</span>
                <span>
                  {new Date(session.date).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </span>
              </div>

              {/* Stats Grid */}
              <div className="grid grid-cols-3 gap-3">
                <div>
                  <div className="text-xs text-gray-500 uppercase tracking-wide mb-1">
                    Best Lap
                  </div>
                  <div className="text-base font-semibold text-green-400">
                    {formatLapMs(session.best_lap_ms)}
                  </div>
                </div>
                <div>
                  <div className="text-xs text-gray-500 uppercase tracking-wide mb-1">
                    Laps
                  </div>
                  <div className="text-base font-semibold text-white">
                    {session.lap_count || 0}
                  </div>
                </div>
                <div>
                  <div className="text-xs text-gray-500 uppercase tracking-wide mb-1">
                    Duration
                  </div>
                  <div className="text-base font-semibold text-white">
                    {formatDurationMs(session.total_time_ms)}
                  </div>
                </div>
              </div>

              {/* Tap indicator */}
              <div className="mt-3 pt-3 border-t border-gray-700 flex items-center justify-between text-xs text-gray-500">
                <span>View session details</span>
                <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </Link>
        ))}
      </div>
    </div>
  );
}
